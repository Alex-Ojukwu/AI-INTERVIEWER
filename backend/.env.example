# AI Virtual Interview Assistant - Environment Variables
# Copy this file to .env and fill in your API keys

# Application Settings
APP_NAME="AI Virtual Interview Assistant"
DEBUG=False

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Whisper API (uses same OpenAI key)
WHISPER_MODEL=whisper-1

# D-ID Avatar API (Optional)
DID_API_KEY=your_did_api_key_here
DID_API_URL=https://api.d-id.com

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000

# File Upload Limits
MAX_AUDIO_SIZE_MB=10

# Emotion Detection
EMOTION_CONFIDENCE_THRESHOLD=0.6

# Interview Settings
MAX_INTERVIEW_DURATION_MINUTES=30
QUESTION_TIMEOUT_SECONDS=120
